{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "types": [
      "react",
      "react-dom"
    ],
    "lib": [
      "dom",
      "es2015",
      "ESNext"
    ],
    "target": "es2024",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
  },
  "include": [
    "src/**/*",
    "tailwind.config.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**"
  ]
}