{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "types": [
      "react",
      "react-dom"
    ],
    "lib": [
      "dom",
      "es2015",
      "ESNext"
    ],
    "target": "es2024",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tailwind.config.ts",
  ],
  "exclude": [
    "node_modules/**"
  ]
}